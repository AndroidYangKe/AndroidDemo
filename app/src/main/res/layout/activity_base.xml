<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        app:navigationIcon="@drawable/back_ic_black">

        <TextView
            android:id="@+id/base_title_center_tv"
            style="@style/titleStyle"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:maxWidth="160dp"
            android:maxLines="1"
            tools:text="/" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/base_title_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/common_title_line_bg" />

    <FrameLayout
        android:id="@+id/base_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar" />

    <com.android.yangke.java.v.widget.MultiStatusView
        android:id="@+id/base_state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="gone" />

</RelativeLayout>
