<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/state_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_content_parent_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <ImageView
            android:id="@+id/main_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/no_data" />

        <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="无数据"
            android:textColor="#323232"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="~暂时没有新数据哦~"
            android:textColor="#656565"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/main_try_again_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/try_again_bg"
            android:gravity="center"
            android:paddingLeft="28dp"
            android:paddingTop="12dp"
            android:paddingRight="28dp"
            android:paddingBottom="12dp"
            android:text="重试"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:id="@+id/multi_view_loading_root"
        layout="@layout/loading_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>