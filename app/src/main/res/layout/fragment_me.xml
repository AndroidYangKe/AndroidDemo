<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/me_tv_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="#2c241f"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffe0e0e0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/me_ll_personal_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2c241f"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/me_txt_author"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="作者：Android_YangKe\nQQ：1551121393"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:drawableStartCompat="@drawable/ic_user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/next" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableStart="@drawable/ic_zichan"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:text="资产管理"
                android:textColor="#2c241f" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:background="#0fe0e0e0"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/me_ll_free"
                    style="@style/me_item_property">

                    <TextView
                        android:id="@+id/me_txt_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0次"
                        android:textColor="#ff0000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="剩余次数" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/me_ll_youhui"
                    style="@style/me_item_property">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0张"
                        android:textColor="#ff0000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="优惠券" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/me_ll_fapiao"
                    style="@style/me_item_property">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0张"
                        android:textColor="#ff0000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="发票" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:text="我的福利"
                android:textColor="#2c241f"
                app:drawableStartCompat="@drawable/ic_zichan" />

            <include layout="@layout/line_fill_right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/share_tv"
                    style="@style/me_item_setting"
                    android:text="推荐有奖"
                    app:drawableTopCompat="@drawable/ic_tuijian" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:text="设置"
                android:textColor="#2c241f"
                app:drawableStartCompat="@drawable/ic_shezhi" />

            <include layout="@layout/line_fill_right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/me_tv_account"
                    style="@style/me_item_setting"
                    android:text="账户安全"
                    app:drawableTopCompat="@drawable/ic_anquan" />

                <TextView
                    android:id="@+id/me_tv_qq_flock"
                    style="@style/me_item_setting"
                    android:text="QQ群"
                    app:drawableTopCompat="@drawable/ic_xiaoxi" />

                <TextView
                    android:id="@+id/me_software_desc_tv"
                    style="@style/me_item_setting"
                    android:text="软件说明"
                    app:drawableTopCompat="@drawable/ic_mianze" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/me_tv_guanyu"
                    style="@style/me_item_setting"
                    android:text="关于作者"
                    app:drawableTopCompat="@drawable/ic_guanyu" />

            </LinearLayout>

            <TextView
                android:id="@+id/me_tv_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/dp8"
                android:text="作者QQ：1551121393"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="服务时间：09:00-20:30"
                android:textColor="#C0C0C0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mt_tv_versionCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="版本号"
                android:textColor="#C0C0C0"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
