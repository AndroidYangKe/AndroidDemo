<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp8"
    android:layout_marginTop="@dimen/dp4"
    android:layout_marginRight="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp4"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/search_result_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp8"
        android:paddingTop="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:text="/" />

    <TextView
        android:id="@+id/search_result_file_size_pre_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:text="文件大小:"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/search_result_title_tv"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/search_result_file_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp8"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_result_file_size_pre_tv"
        app:layout_constraintStart_toEndOf="@+id/search_result_file_size_pre_tv"
        tools:text="/" />


    <TextView
        android:id="@+id/search_result_create_time_pre_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp16"
        android:paddingBottom="@dimen/dp8"
        android:text="创建时间:"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_result_file_size_tv"
        app:layout_constraintStart_toEndOf="@+id/search_result_file_size_tv"
        app:layout_constraintTop_toTopOf="@+id/search_result_file_size_tv"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/search_result_create_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_result_create_time_pre_tv"
        app:layout_constraintStart_toEndOf="@+id/search_result_create_time_pre_tv"
        app:layout_constraintTop_toTopOf="@+id/search_result_create_time_pre_tv"
        tools:ignore="MissingConstraints,RtlSymmetry"
        tools:text="/" />

</androidx.constraintlayout.widget.ConstraintLayout>