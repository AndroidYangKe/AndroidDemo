<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="citySelector" parent="Theme.AppCompat.Light.Dialog"><!--城市选择-->
        <item name="android:windowEnterAnimation">@anim/bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide_out</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog"/><!--底部弹出的BottomSheetDialogFragment-->

    <style name="titleStyle"> <!--通用标题样式-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="maxWidth">160dp</item>
    </style>

    <style name="DialogEnterOut1"><!--dialog进入退出动画-->
        <item name="android:windowEnterAnimation">@anim/anim_bottom_2_top</item>
        <item name="android:windowExitAnimation">@anim/anim_view_top_2_bottom</item>
    </style>

    <style name="me_item_property"><!--个人中心 item-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--个人中心 item setting-->
    <style name="me_item_setting">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp12</item>
        <item name="android:paddingTop">@dimen/dp12</item>
        <item name="android:textColor">#2c241f</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

</resources>